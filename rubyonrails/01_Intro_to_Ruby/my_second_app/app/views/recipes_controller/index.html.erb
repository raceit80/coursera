<h1>Searching for Recipes: <%= @term %></h1>


<table border="1">
	<tr>
		<th>Image</th>
		<th>Title</th>
		<th>SocialRank</th>
	</tr>

	<% @new_recipes_hash.each do |h| %>
	<tr>
		<td style="width: 300px;height:300px;"><%= image_tag(h["image_url"]) %></td>
		<td><%= h["title"] %></td>
		<td><%= h["social_rank"] %></td>
	</tr>
	<% end %>
</table>

		
		



